<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Medical Quiz" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollViewContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_marginBottom="72dp"> <!-- keep space for fixed bottom nav -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <include
                android:id="@+id/startFiltersPanel"
                layout="@layout/start_filters_panel" />

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textAlignment="center"
            android:visibility="gone"
            android:layout_marginTop="4dp"/>

        <!-- Inline filters panel replaced the startup dialog: user sets filters directly on the
             main screen and presses Start to load the filtered question list. -->
        <LinearLayout
            android:id="@+id/filterPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textViewPreviewCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 questions match"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/colorOnSurface" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSelectSubjects"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subjects" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSelectSystems"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Systems" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSelectPerformance"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Performance" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonStartQuiz"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Start"
                android:enabled="false" />

        </LinearLayout>

        <!-- Question number and title removed from UI â€” they are not needed in this layout -->

        <TextView
            android:id="@+id/textViewMetadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject | System"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/textViewPerformance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attempts: 0"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/textViewMediaInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Ž 3 media files"
            android:textSize="12sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:minHeight="120dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:contentPadding="0dp">

                    <WebView
                        android:id="@+id/webViewQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="120dp"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:padding="12dp"
                        android:scrollbarStyle="outsideOverlay"
                        android:scrollbars="vertical"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:importantForAutofill="no"
                        tools:ignore="WebViewLayout" />


                </com.google.android.material.card.MaterialCardView>

                <!-- Extra spacing to ensure the card doesn't butt up to the bottom nav -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- Fixed bottom app bar -->
        <!-- Simplified bottom bar with only Previous and Next. -->
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center"
            android:background="?attr/colorSurface">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPrevious"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:icon="@drawable/ic_arrow_back"
                android:text="Previous"
                android:contentDescription="Previous question" />

            <!-- Counter in the middle - editable number input followed by total -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/counterContainer"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">


                <TextView
                    android:id="@+id/textViewQuestionIndex"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:contentDescription="Question number, tap to jump" />

                <TextView
                    android:id="@+id/textViewTotalQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/ 0"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonNext"
                style="@style/Widget.Material3.Button" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:icon="@drawable/ic_arrow_forward"
                android:text="Next"
                android:contentDescription="Next question" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
