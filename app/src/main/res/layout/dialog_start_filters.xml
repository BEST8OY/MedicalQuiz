<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewStartDialogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select filters and press Start"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewPreviewCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0 questions match"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintTop_toBottomOf="@+id/textViewStartDialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonSelectSubjects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select Subjects"
        app:layout_constraintTop_toBottomOf="@+id/textViewStartDialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/buttonSelectSystems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select Systems"
        app:layout_constraintTop_toBottomOf="@+id/buttonSelectSubjects"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonSelectPerformance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select Performance"
        app:layout_constraintTop_toBottomOf="@+id/buttonSelectSystems"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@+id/buttonSelectPerformance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/buttonCancelStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/buttonStartQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_marginStart="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>